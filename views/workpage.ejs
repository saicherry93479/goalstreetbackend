    <script>
      // Function to check if a cookie exists
      function getCookie(name) {
        const cookies = document.cookie.split(";");
        for (let i = 0; i < cookies.length; i++) {
          const cookie = cookies[i].trim();
          if (cookie.startsWith(name + "=")) {
            return cookie.substring(name.length + 1);
          }
        }
        return null;
      }
      function getURLParameter(name) {
        return (
          decodeURIComponent(
            (new RegExp("[?|&]" + name + "=" + "([^&;]+?)(&|#|;|$)").exec(
              location.search
            ) || [null, ""])[1].replace(/\+/g, "%20")
          ) || null
        );
      }

      // Check if the authentication cookie exists
      const authToken = getCookie("auth");

      // If auth token exists, append it to the URL
      if (authToken) {
        console.log("token present");
        const currentUrl = window.location.href;
        const separator = currentUrl.includes("?") ? "&" : "?";
        if (!currentUrl.includes("authtoken=")) {
          const newUrl =
            currentUrl +
            separator +
            "authtoken=" +
            encodeURIComponent(authToken);
          window.location.href = newUrl;
        }
      } else {
        console.log("token  not present");
        // If there's no auth cookie, check the URL for authtoken and userType
        const urlAuthToken = getURLParameter("authtoken");
        const userType = getURLParameter("role");

        console.log("token and hr is ", urlAuthToken, " -- ", userType);

        // Check if both parameters exist and userType is 'HR', then set the cookie
        if (urlAuthToken) {
          console.log("Setting up it is HR");
          // Assuming setCookie is a function to set a cookie
          // You might need to define this function or replace it with your method of setting cookies
          // Example setCookie function: setCookie('auth', urlAuthToken, expiryDays);
          document.cookie = "auth=" + urlAuthToken + "; path=/;"; // Set cookie path as per requirement

          // Optionally, you might want to redirect or reload the page after setting the cookie
          // location.reload(); // Uncomment if needed
        }
      }
    </script>
